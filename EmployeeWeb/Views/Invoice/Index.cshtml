@model IEnumerable<Common.ViewModels.InvoiceViewModel>

@{
    ViewBag.Title = "Wszystkie Faktury";
    Layout = "_Layout";
}
@await Html.PartialAsync("PageTitle/_PageTitle", ViewData["Title"])

<div class="paddingpage">


    <div class="card">
        <table class="responsive-table">
            <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Number)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rma)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Total)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PaymentStatus)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.InvoiceDate)
                </th>
                <th>

                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>

                        @Html.DisplayFor(modelItem => item.Number)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rma)
                    </td>
                    <td>
                        @item.Total.ToString("C")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaymentStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InvoiceDate)
                    </td>
                    <td>

                        <a class="waves-effect waves-light btn blue left" asp asp-route-Id="@item.Number.Replace("/", "-")" asp-action="Download"><i class="material-icons left">file_download</i>Pobierz</a>
                    </td>

                </tr>
            }
            </tbody>
        </table>
    </div>
</div>